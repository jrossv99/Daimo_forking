{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll": "explicit"
  },
  "editor.rulers": [80],
  "typescript.tsdk": "node_modules/typescript/lib",
  "json.schemas": [
    {
      "fileMatch": ["eas.json"],
      "url": "https://raw.githubusercontent.com/expo/eas-cli/main/packages/eas-json/schema/eas.schema.json"
    }
  ],
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "[kotlin]": {
    "editor.defaultFormatter": "esafirm.kotlin-formatter"
  },
  "coverage-gutters.coverageBaseDir": "packages/contract",
  "coverage-gutters.coverageFileNames": ["lcov.info"],
  "solidity.compileUsingRemoteVersion": "v0.8.26+commit.8a97fa7a"
}
